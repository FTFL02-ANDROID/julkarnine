<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/black"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            
            android:gravity="center"
            android:padding="11dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvMyVisitingPlacesList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/topest"
                android:drawableRight="#000000"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:typeface="monospace" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp"
             >

            <TextView
                android:id="@+id/tvMyCurrentPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yourCurrentLocation"
                android:textColor="#ffffff"
                android:typeface="monospace" />

            <TextView
                android:id="@+id/tvMyCurrentPositionLat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lat"
                android:textColor="#ffffff"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvMyCurrentPositionLong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/longi"
                android:textColor="#ffffff"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lvPlacesList"
            android:layout_width="match_parent"
            android:layout_height="358dp" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_vertical" >

        <Button
            android:id="@+id/btnHomeNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/black"
            android:padding="14dp"
            android:text="@string/home"
            android:textColor="#FFFFFF"
            android:typeface="monospace" />
    </LinearLayout>

</LinearLayout>